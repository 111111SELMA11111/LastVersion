<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="JavaDevProject.DashboardController"
            prefWidth="800.0" prefHeight="600.0">

    <!-- Left side with buttons -->
    <VBox prefWidth="200.0" style="-fx-background-color: lightgray;">
        <Button text="Scene 1" onAction="#handleScene1Button"/>
        <Button text="Scene 2" onAction="#handleScene2Button"/>
        <Button text="Scene 3" onAction="#handleScene3Button"/>
        <!-- Add more buttons as needed -->
    </VBox>

    <!-- Right side for scenes -->
    <AnchorPane fx:id="scenePane">
        <!-- Placeholder for your scenes -->
        <!-- You can load scenes dynamically here -->
    </AnchorPane>
</AnchorPane>
